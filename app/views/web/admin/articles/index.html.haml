.page-header
  %h1=t('.title')
  
= simple_form_for @search, url: admin_articles_path, method: :get do |f|
  %table.table
    %thead
      %tr
        %td
          = f.input_field :title_cont, placeholder: Article.human_attribute_name(:title), label: false, required: false
        %td
          = f.input :state_in, collection: Article.state_machine.states.map { |s| [s.human_name, s.name] }, input_html: { data: { placeholder: Article.human_attribute_name(:state) }}, label: false, required: false
        %td
          = f.submit t(".search"), :class => 'btn btn-primary' 

= link_to t('.new'), new_admin_article_path, :class => 'btn btn-primary'
    
= paginate @articles
%table.table.table-striped
  %thead
    %tr
      %th= sort_link(@search, :id, Article.human_attribute_name(:id))
      %th= sort_link(@search, :title, Article.human_attribute_name(:title))
      %th= sort_link(@search, :state, Article.human_attribute_name(:state))
      %th= sort_link(@search, :created_at, Article.human_attribute_name(:created_at))
      %th= t(".actions")
  %tbody
    - @articles.each do |article|
      %tr
        %td= link_to article.id, edit_admin_article_path(article)
        %td= article.title
        %td= article.human_state_name
        %td= l article.created_at
        %td
          = link_to t('.edit'), edit_admin_article_path(article), class: 'btn btn-mini'
          = link_to t('.destroy'), admin_article_path(article), method: :delete, data: { confirm: t('.confirm') }, class: 'btn btn-mini btn-danger'
= paginate @articles

= link_to t('.new'), new_admin_article_path, class: 'btn btn-primary'